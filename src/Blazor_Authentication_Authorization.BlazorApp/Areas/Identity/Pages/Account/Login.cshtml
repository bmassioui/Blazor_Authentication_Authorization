@page
@model LoginModel

<div class="col-md-9 col-lg-6 col-xl-5">
    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
         class="img-fluid" alt="Login Image">
</div>
<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
    <form id="account" method="post">
        <div class="d-flex flex-row justify-content-lg-start mb-2">
            <p class="lead mb-0 me-3 fw-bold">Sign In</p>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Email input -->
        <div class="form-outline mb-4">
            <label asp-for="Input.Email" class="form-label" autocomplete="username" aria-required="true"></label>
            <input asp-for="Input.Email" class="form-control form-control-md" placeholder="Enter a valid email address" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-3">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control form-control-md" placeholder="Enter password" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
                <label asp-for="Input.RememberMe" class="form-check-label">
                    <input asp-for="Input.RememberMe" class="form-check-input me-2" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>

        <div class="text-center text-lg-start mt-4 pt-2">
            <button type="button" class="btn btn-primary btn-md" style="padding-left: 2.5rem; padding-right: 2.5rem;">
                Login
            </button>
            <p class="small fw-bold mt-2 pt-1 mb-0">
                Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-danger">Register as a new user</a>
            </p>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}