<AuthorizeView>
    <Authorized>
        <MudButton StartIcon="@Icons.Filled.AccountCircle" Color="Color.Inherit">@context.User.Identity?.Name</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton StartIcon="@Icons.Filled.AccountCircle" Color="Color.Inherit" @onclick="OnLogRegisterButton_Click">Login/Register</MudButton>
    </NotAuthorized>
</AuthorizeView>